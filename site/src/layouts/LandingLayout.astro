---
import "../styles/landing.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Artifact Keeper — The Open-Source Artifactory Alternative",
  description = "The open-source Artifactory alternative. Full-featured artifact management with security scanning, 40+ package formats, and enterprise features—all free.",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/png" href="/favicon.png" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={new URL('/logo-512.png', Astro.site)} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL('/logo-512.png', Astro.site)} />
  </head>
  <body class="font-sans text-gray-900 bg-white">
    <slot />
    <script>
      document.querySelectorAll('.js-email-link').forEach((el) => {
        const name = el.getAttribute('data-name');
        const domain = el.getAttribute('data-domain');
        if (name && domain) {
          el.setAttribute('href', 'mail' + 'to:' + name + '@' + domain);
        }
      });
    </script>
  </body>
</html>
