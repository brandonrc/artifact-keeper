<nav
  id="navbar"
  class="fixed top-0 left-0 right-0 z-50 transition-all duration-300"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 text-xl font-bold text-white navbar-logo transition-colors duration-300">
        <img src="/logo-48.png" alt="" class="w-8 h-8" />
        Artifact Keeper
      </a>

      <!-- Center Links (Desktop) -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="#features" class="text-white/80 hover:text-white navbar-link transition-colors duration-300 text-sm font-medium">Features</a>
        <a href="#formats" class="text-white/80 hover:text-white navbar-link transition-colors duration-300 text-sm font-medium">Formats</a>
        <a href="https://demo.artifactkeeper.com" class="text-white/80 hover:text-white navbar-link transition-colors duration-300 text-sm font-medium">Demo</a>
        <a href="/docs/" class="text-white/80 hover:text-white navbar-link transition-colors duration-300 text-sm font-medium">Docs</a>
        <a href="https://github.com/artifact-keeper" class="text-white/80 hover:text-white navbar-link transition-colors duration-300 text-sm font-medium">GitHub</a>
      </div>

      <!-- Right CTA (Desktop) -->
      <div class="hidden md:block">
        <a
          href="#deploy"
          class="inline-block px-5 py-2 rounded-md bg-brand text-white text-sm font-semibold hover:bg-brand-hover transition-colors duration-200"
        >
          Deploy Now
        </a>
      </div>

      <!-- Mobile Hamburger -->
      <button
        id="mobile-menu-btn"
        class="md:hidden text-white navbar-hamburger transition-colors duration-300 focus:outline-none"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path id="hamburger-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Dropdown -->
  <div id="mobile-menu" class="hidden md:hidden bg-white shadow-lg">
    <div class="px-4 py-3 space-y-2">
      <a href="#features" class="block px-3 py-2 rounded text-brand-dark hover:bg-gray-100 text-sm font-medium">Features</a>
      <a href="#formats" class="block px-3 py-2 rounded text-brand-dark hover:bg-gray-100 text-sm font-medium">Formats</a>
      <a href="https://demo.artifactkeeper.com" class="block px-3 py-2 rounded text-brand-dark hover:bg-gray-100 text-sm font-medium">Demo</a>
      <a href="/docs/" class="block px-3 py-2 rounded text-brand-dark hover:bg-gray-100 text-sm font-medium">Docs</a>
      <a href="https://github.com/artifact-keeper" class="block px-3 py-2 rounded text-brand-dark hover:bg-gray-100 text-sm font-medium">GitHub</a>
      <a href="#deploy" class="block px-3 py-2 mt-2 rounded bg-brand text-white text-sm font-semibold text-center hover:bg-brand-hover">Deploy Now</a>
    </div>
  </div>
</nav>

<script>
  const navbar = document.getElementById('navbar');
  const logo = navbar?.querySelector('.navbar-logo');
  const links = navbar?.querySelectorAll('.navbar-link');
  const hamburger = navbar?.querySelector('.navbar-hamburger');
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  function updateNavbar() {
    if (!navbar) return;
    const scrolled = window.scrollY > 50;

    if (scrolled) {
      navbar.classList.add('bg-white', 'shadow-md');
      navbar.classList.remove('bg-transparent');
      logo?.classList.replace('text-white', 'text-brand-dark');
      links?.forEach((link) => {
        link.classList.remove('text-white/80', 'hover:text-white');
        link.classList.add('text-gray-600', 'hover:text-brand-dark');
      });
      hamburger?.classList.replace('text-white', 'text-brand-dark');
    } else {
      navbar.classList.remove('bg-white', 'shadow-md');
      navbar.classList.add('bg-transparent');
      logo?.classList.replace('text-brand-dark', 'text-white');
      links?.forEach((link) => {
        link.classList.remove('text-gray-600', 'hover:text-brand-dark');
        link.classList.add('text-white/80', 'hover:text-white');
      });
      hamburger?.classList.replace('text-brand-dark', 'text-white');
    }
  }

  window.addEventListener('scroll', updateNavbar);
  updateNavbar();

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking a link
  mobileMenu?.querySelectorAll('a').forEach((link) => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>
