<section id="native-apps" class="bg-gray-50 py-20">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-center mb-4">
      Manage from anywhere
    </h2>
    <p class="text-center text-gray-600 max-w-2xl mx-auto mb-12">
      Native apps for macOS, iOS, and Android. Browse repositories, monitor builds, trigger scans, and administer users&mdash;all from your device.
    </p>

    <!-- macOS -->
    <div class="mb-16">
      <h3 class="text-lg font-semibold text-center text-gray-500 uppercase tracking-wide mb-6">macOS</h3>
      <div class="rounded-xl overflow-hidden shadow-xl border border-gray-200 max-w-4xl mx-auto">
        <img src="/macos-demo.gif" alt="Artifact Keeper macOS app demo" class="w-full h-auto" loading="lazy" />
      </div>
    </div>

    <!-- Mobile: Android & iOS side by side -->
    <h3 class="text-lg font-semibold text-center text-gray-500 uppercase tracking-wide mb-2">Android &amp; iOS</h3>
    <p class="text-center text-sm text-gray-400 mb-6">Coming soon to the App Store &amp; Google Play</p>
    <div class="flex justify-center items-start gap-6 md:gap-12">
      <div class="text-center">
        <div class="rounded-xl overflow-hidden shadow-xl border border-gray-200 inline-block">
          <img src="/android-demo.gif" alt="Artifact Keeper Android app demo" class="h-[500px] w-auto" loading="lazy" />
        </div>
        <p class="text-sm text-gray-500 mt-3 font-medium">Android</p>
      </div>
      <div class="text-center">
        <div class="rounded-xl overflow-hidden shadow-xl border border-gray-200 inline-block">
          <img src="/ios-demo.gif" alt="Artifact Keeper iOS app demo" class="h-[500px] w-auto" loading="lazy" />
        </div>
        <p class="text-sm text-gray-500 mt-3 font-medium">iOS</p>
      </div>
    </div>

    <!-- App links -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mt-12">
      <span
        class="inline-block px-6 py-3 rounded-md border-2 border-gray-300 text-gray-400 font-semibold cursor-not-allowed"
        title="Coming soon to the App Store"
      >
        App Store &mdash; Coming Soon
      </span>
      <span
        class="inline-block px-6 py-3 rounded-md border-2 border-gray-300 text-gray-400 font-semibold cursor-not-allowed"
        title="Coming soon to Google Play"
      >
        Google Play &mdash; Coming Soon
      </span>
    </div>
  </div>
</section>
