---
import { packages } from "../data/packages";

const grouped = packages.reduce<Record<string, string[]>>((acc, pkg) => {
  if (!acc[pkg.category]) acc[pkg.category] = [];
  acc[pkg.category].push(pkg.name);
  return acc;
}, {});

const categories = Object.keys(grouped);
---

<section id="formats" class="bg-gray-50 py-20">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-center mb-12">
      Every package format. One registry.
    </h2>

    <div class="space-y-10">
      {categories.map((category) => (
        <div>
          <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-3">
            {category}
          </h3>
          <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 lg:grid-cols-8 gap-3">
            {grouped[category].map((name) => (
              <div class="bg-white rounded shadow-sm p-3 text-center text-sm hover:shadow-md transition">
                {name}
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <p class="text-center text-gray-500 mt-10">
      Don't see your format? Our WASM plugin system lets you add custom formats.
    </p>
  </div>
</section>
